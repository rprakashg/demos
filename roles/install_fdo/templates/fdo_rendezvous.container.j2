[Unit]
Description=FDO Rendezvous Server

[Container]
Image={{ rendezvous.image }}
ContainerName={{ rendezvous.name }}
Restart=always
PublishPort={{ rendezvous.port.host_port }}:{{ rendezvous.port.container_port }}
{% for v in rendezvous.volumes %}
Volume={{ v.local_path }}:{{ v.container_path }}Z
{% endfor %}

[Install]
WantedBy=multi-user.target default.target